<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Composer 代理</title>
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        <link href="//fonts.fengqi.me/css?family=Raleway:400,500,600" rel="stylesheet" type="text/css">
        <link href="{{ asset('css/normalize.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/styles.css') }}" rel="stylesheet" />
    </head>
    <body>
        {% block nav %}
            <header>
                <div class="content-area">
                    {% if toran_product == 'personal' %}
                        <a class="license-hint" href="https://toranproxy.com"></a>
                    {% endif %}
                    <h1><a href="{{ path('home') }}">Composer 代理</a></h1>
                </div>
            </header>

            {% spaceless %}
            <div class="content-area flash-messages">
            {% for type, flashMessages in app.session.flashbag.all() %}
                {% for flashMessage in flashMessages %}
                    <div class="flash-message {{ type }}">
                        <p>{{ flashMessage }}</p>
                    </div>
                {% endfor %}
            {% endfor %}
            </div>
            {% endspaceless %}
        {% endblock %}

        <div class="content-area">
            {% block content %}{% endblock %}
        </div>

        {% block footer %}
            <footer>
                <div class="content-area">
                    <a href="https://toranproxy.com">Toran Proxy</a> v{{ toran_version }} {% if toran_version < latest_toran_version %}(<a href="{{ path('docs', {page: 'usage.md'}) }}#updates" class="update-hint">New version available!</a>) {% endif %}- <a href="mailto:toran@nelm.io">Feedback</a>
                    <a href="{{ path('toran_proxy_packagist_index') }}">已缓存包列表</a>
                    <a href="https://github.com/fengqi/composer.fengqi.me">源码</a>
                </div>
            </footer>
        {% endblock %}

        <script src="{{ asset('js/jquery-2.1.0.min.js') }}"></script>
        <script src="{{ asset('js/main.js') }}"></script>
        <script>{% block post_js %}{% endblock %}</script>
    </body>
</html>
